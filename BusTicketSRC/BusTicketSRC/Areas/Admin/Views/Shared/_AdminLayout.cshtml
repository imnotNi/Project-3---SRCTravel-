<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <!-- Đảm bảo đường dẫn đúng cho tệp site.css -->
    <link rel="stylesheet" href="~/Content/Style.css" />
</head>
<body>
    <div id="container">
        <div class="col-md-2 sidebar">
            <h1>Admin</h1>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark">
                <div class="nav-links" id="navbarSupportedContent">
                    <ul class="nav-link">
                        <li class="nav-item">@Html.ActionLink("User", "Index", "UsersAdmin", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Trip", "Index", "TripsAdmin", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Ticket", "Index", "TicketsAdmin", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Booking", "Index", "BookingsAdmin", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Bus", "Index", "BusesAdmin", new { area = "Admin" }, new { @class = "nav-link" })</li>
                        <li class="nav-item"><a href="@Url.Content("~/home/logout")" class="nav-link">Logout</a></li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="body-content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
